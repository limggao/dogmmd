<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tjekuaitong.mapper.UserMapper">
	<insert id="insert" parameterType="com.tjekuaitong.entity.Picture">
		insert into picture
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="picture_id != null">
				picture_id,
			</if>
			<if test="url != null">
				url,
			</if>
			<if test="add_time != null">
				add_time,
			</if>
			is_hidden
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="picture_id != null">
				#{picture_id},
			</if>

			<if test="picture_id != null">
				#{picture_id},
			</if>
			<if test="url != null">
				#{url},
			</if>
			<if test="add_time != null">
				#{add_time},
			</if>
			0
		</trim>
	</insert>
	<select id="select" resultType="com.tjekuaitong.entity.Picture"
		parameterType="String">
		select * from picture
		<where>
			<if test="picture_id !=null">
				and picture_id = #{picture_id,jdbcType=VARCHAR}
			</if>
			and is_hidden='0'
		</where>

	</select>

	<update id="update" parameterType="com.tjekuaitong.entity.Picture">
		update Picture
		<set>
			<if test="picture_id != null">
				picture_id = #{picture_id,jdbcType=VARCHAR},
			</if>
			<if test="url != null">
				url = #{url,jdbcType=VARCHAR},
			</if>
			<if test="add_time != null">
				add_time = #{add_time,jdbcType=VARCHAR},
			</if>
			<if test="is_hidden != null">
				is_hidden = #{is_hidden,jdbcType=VARCHAR},
			</if>
		</set>
		<where>
			id = #{id,jdbcType=VARCHAR}
		</where>
	</update>

</mapper>