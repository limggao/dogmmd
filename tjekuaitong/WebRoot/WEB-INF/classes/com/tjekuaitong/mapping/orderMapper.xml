<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tjekuaitong.mapping.orderMapper">
	<insert id="insert" parameterType="com.tjekuaitong.entity.Order">
		insert into Order
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="orderid != null">
				orderid,
			</if>
			<if test="product_id != null">
				product_id,
			</if>
			<if test="product_name != null">
				product_name,
			</if>
			<if test="product_desc != null">
				product_desc,
			</if>
			<if test="product_grade != null">
				product_grade,
			</if>
			<if test="product_type != null">
				product_type,
			</if>
			<if test="product_price != null">
				product_price,
			</if>
			<if test="actual_price != null">
				actual_price,
			</if>
			<if test="sepc_id != null">
				sepc_id,
			</if>
			<if test="sepc_price != null">
				sepc_price,
			</if>
			<if test="openid != null">
				openid,
			</if>
			<if test="nickName != null">
				nickName,
			</if>
			<if test="userid != null">
				userid,
			</if>
			<if test="picture_id != null">
				nickName,
			</if>
			<if test="add_time != null">
				add_time,
			</if>
			<if test="pay_status != null">
				pay_status,
			</if>
			<if test="order_status != null">
				order_status,
			</if>
			<if test="sepc_status != null">
				sepc_status,
			</if>
			<if test="pay_time != null">
				pay_time,
			</if>
			<if test="sepc_time != null">
				sepc_time,
			</if>
			is_hidden
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="orderid != null">
				#{orderid},
			</if>
			<if test="product_id != null">
				#{product_id},
			</if>
			<if test="product_name != null">
				#{product_name},
			</if>
			<if test="product_desc != null">
				#{product_desc},
			</if>
			<if test="product_grade != null">
				#{product_grade},
			</if>
			<if test="product_type != null">
				#{product_type},
			</if>
			<if test="product_price != null">
				#{product_price},
			</if>
			<if test="actual_price != null">
				#{actual_price},
			</if>
			<if test="sepc_id != null">
				#{sepc_id},
			</if>
			<if test="sepc_price != null">
				#{sepc_price},
			</if>
			<if test="openid != null">
				#{openid},
			</if>
			<if test="nickName != null">
				#{nickName},
			</if>
			<if test="userid != null">
				#{userid},
			</if>
			<if test="add_time != null">
				#{add_time},
			</if>
			<if test="pay_status != null">
				#{pay_status},
			</if>
			<if test="order_status != null">
				#{order_status},
			</if>
			<if test="sepc_status != null">
				#{sepc_status},
			</if>
			<if test="pay_time != null">
				#{pay_time},
			</if>
			<if test="sepc_time != null">
				#{sepc_time},
			</if>
			0
		</trim>
	</insert>
	<select id="selectList" resultType="com.tjekuaitong.entity.Picture"
		parameterType="String">
		select * from picture
		<where>
			<if test="product_id !=null">
				and product_id = #{product_id}
			</if>
			and is_hidden='0'
		</where>

	</select>

	<update id="update" parameterType="com.tjekuaitong.entity.Picture">
		update Picture
		<set>
			<if test="picture_id != null">
				picture_id = #{picture_id,jdbcType=VARCHAR},
			</if>
			<if test="url != null">
				url = #{url,jdbcType=VARCHAR},
			</if>
			<if test="add_time != null">
				add_time = #{add_time,jdbcType=VARCHAR},
			</if>
			<if test="is_hidden != null">
				is_hidden = #{is_hidden,jdbcType=VARCHAR},
			</if>
		</set>
		<where>
			id = #{id,jdbcType=VARCHAR}
		</where>
	</update>

</mapper>